<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"> <!-- Disabled -->
        <shape android:shape="rectangle">
            <solid android:color="@color/layout_background" />
            <corners android:radius="@dimen/layout_radius" />
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- Pressed -->
        <shape android:shape="rectangle">
            <solid android:color="@color/layout_background" />
            <corners android:radius="@dimen/layout_radius" />
        </shape>
    </item>
    <item> <!-- Default -->
        <shape android:shape="rectangle">
            <solid android:color="@color/layout_background" />
            <corners android:radius="@dimen/layout_radius" />
        </shape>
    </item>
</selector>